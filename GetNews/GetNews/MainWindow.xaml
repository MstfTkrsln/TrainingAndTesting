<Window x:Class="GetNews.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="GetNews" Height="658" Width="757" Loaded="Window_Loaded">
    <Grid>
        <Button Content="Get" Height="28" HorizontalAlignment="Right" Margin="651,8,10,0" Name="btnGetNews" VerticalAlignment="Top" Width="75" Click="btnGetNews_Click" />
        <TextBox Height="auto" HorizontalAlignment="Stretch" Margin="10,50,10,10" Name="txtNews" VerticalAlignment="Stretch"  AcceptsReturn="True" TextWrapping="Wrap" Width="auto" />
        <TextBox Height="23" HorizontalAlignment="Stretch" Margin="79,12,100,0" Name="txtLink" VerticalAlignment="Top" Width="auto" />
        <Label Content="News RSS:" Height="28" HorizontalAlignment="Left" Margin="12,8,0,0" Name="lblLink" VerticalAlignment="Top" />
    </Grid>
</Window>
